@model List<Skill>
<div class="container">
    <!-- Bootstrap Dark Table -->
    <hr>
    <a href="/admin/Skills/create">
        <button class="btn btn-primary btn-lg w-100" type="button">Create</button>
    </a>
    <div class="card">
        <h5 class="card-header"> Skills Section </h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Empty</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var award in Model)
                    {
                        <tr>
                            <td>
                                @award.Id
                            </td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@award.Title</strong></td>
                            <td>
                                @Html.Raw(award.Description.Substring(0 , 10)) ...
                            </td>
                            <td>
                                <span>@award.Empty</span>
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript:void(0);"><i
                                                class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item text-danger" href="/admin/Skills/delete/@award.Id"><i
                                                class="bx bx-trash me-1"></i>
                                            Delete</a>
                                        <a class="dropdown-item" href="/admin/Skills/Detail/@award.Id"><i
                                                class="bx bx-detail me-1"></i>
                                            Detail</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Bootstrap Dark Table -->
</div>