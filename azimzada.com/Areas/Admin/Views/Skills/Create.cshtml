<div class="container">
    <div class="  ">
        <!-- HTML5 Inputs -->
        <form method="post" enctype="multipart/form-data">
            <div class="card mb-4">
                <h5 class="card-header">Skillis - </h5>
                <div class="card-body">
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">Text</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" value="Sneat" name="title" id="html5-text-input" />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="description" class="col-md-2 col-form-label">Text</label>
                        <div class="col-md-10">
                            <textarea class="form-control" name="description" id="description"></textarea>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="html5-url-input" class="col-md-2 col-form-label">URL</label>
                        <div class="col-md-10">
                            <input class="form-control" type="url" name="url" id="html5-url-input" />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="startingDate" class="col-md-2 col-form-label">Start - Date</label>
                        <div class="col-md-10">
                            <input class="form-control" type="date" name="dateTime" id="startingDate" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- File input -->
            <div class="card mb-4">
                <h5 class="card-header">File input</h5>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="photo" class="form-label">Please select file</label>
                        <input class="form-control" type="file" name="photo" id="photo" />
                    </div>
                </div>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Button</button>
        </form>
    </div>
</div>